{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/product-v2.json",
  "title": "Product Schema",
  "description": "Schema for product data in e-commerce system",
  "type": "object",
  "properties": {
    "product_id": {
      "type": "string",
      "description": "Unique identifier for the product"
    },
    "name": {
      "type": "string",
      "description": "Product name",
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "description": "Detailed product description"
    },
    "price": {
      "type": "object",
      "description": "Product price information",
      "properties": {
        "amount": {
          "type": "number",
          "description": "Price amount",
          "minimum": 0
        },
        "currency": {
          "type": "string",
          "description": "Currency code",
          "pattern": "^[A-Z]{3}$"
        }
      },
      "required": ["amount", "currency"],
      "additionalProperties": false
    },
    "category": {
      "type": "string",
      "description": "Product category"
    },
    "brand": {
      "type": "string",
      "description": "Product brand"
    },
    "stock": {
      "type": "object",
      "description": "Stock information",
      "properties": {
        "available": {
          "type": "integer",
          "description": "Available quantity in stock",
          "minimum": 0
        },
        "reserved": {
          "type": "integer",
          "description": "Reserved quantity",
          "minimum": 0
        }
      },
      "required": ["available", "reserved"],
      "additionalProperties": false
    },
    "sku": {
      "type": "string",
      "description": "Stock Keeping Unit"
    },
    "tags": {
      "type": "array",
      "description": "Product tags",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "images": {
      "type": "array",
      "description": "Product images",
      "items": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "Image URL",
            "format": "uri"
          },
          "alt": {
            "type": "string",
            "description": "Alternative text for image"
          }
        },
        "required": ["url", "alt"],
        "additionalProperties": false
      }
    },
    "specifications": {
      "type": "object",
      "description": "Product specifications",
      "properties": {
        "weight": {
          "type": "string",
          "description": "Product weight"
        },
        "dimensions": {
          "type": "string",
          "description": "Product dimensions"
        },
        "battery_life": {
          "type": "string",
          "description": "Battery life duration"
        },
        "water_resistance": {
          "type": "string",
          "description": "Water resistance rating"
        }
      },
      "additionalProperties": true
    },
    "created_at": {
      "type": "string",
      "description": "Creation timestamp",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "description": "Last update timestamp",
      "format": "date-time"
    },
    "index": {
      "type": "string",
      "description": "Search index name",
      "enum": ["products"]
    },
    "store_id": {
      "type": "string",
      "description": "Store identifier"
    }
  },
  "required": [
    "product_id",
    "name",
    "price",
    "category",
    "brand",
    "stock",
    "sku",
    "created_at",
    "updated_at",
    "index",
    "store_id"
  ],
  "additionalProperties": false
}